<% provide(:page_title, 'All Article') %>

<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
  <li><%= link_to article.title, article_path(article) %> | by <%= article.author %> | <%= article.points %> points</li>
    <%= form_for [article] do |f| %>
      <%= f.hidden_field(:points, :value => (article.points + 10)) %>
      <p><%= f.submit "Vote" %> | <%= link_to 'Edit Article', edit_article_path(article) %>| <%= link_to 'Delete Article', article_path(article), :data => {:confirm => "Are you sure?", :method => "delete"} %></p>
    <% end %>
  <% end %>
</ul>

<hr>

<%= link_to "New Article", new_article_path %>
